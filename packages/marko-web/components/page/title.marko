import { cleanPath } from "@parameter1/base-cms-utils";

$ const { config } = out.global;
$ const parts = [
  input.value,
  config.website("name"),
];
$ const concatWith = input.concatWith || "|";
$ const title = parts.filter(v => v && v !== 'Home').join(` ${concatWith} `);

<title>
  <if(input.renderBody)>
    <${input.renderBody} />
  </if>
  <else>
    ${title}
  </else>
</title>
